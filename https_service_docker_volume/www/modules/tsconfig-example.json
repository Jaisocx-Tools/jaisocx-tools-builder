{
  "compilerOptions": {
    "target": "ES6",               // Output JavaScript version
    "module": "ESNext",            // Use the ES module system
    "outDir": "./dist",            // Specify the output directory for compiled files
    "rootDir": "./src",            // Set the root directory for your source code
    "declaration": true,           // Generate .d.ts files for TypeScript modules
    "esModuleInterop": true,       // Ensures compatibility with CommonJS modules
    "strict": true,                // Enable all strict type-checking options
    "moduleResolution": "node",    // Use Node-style module resolution
    "resolveJsonModule": true,     // Allow imports of .json files
    "skipLibCheck": true,          // Skip library type checking for faster compilation
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
